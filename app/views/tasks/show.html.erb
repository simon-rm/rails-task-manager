<h1><%= @task.title %></h1>

<%= link_to "Edit Task", edit_task_path(@task) %>

<p><%= @task.details %></p>

<input <% if @task.completed %> checked <% end %> a id="checkbox<%@task.id%>" type="checkbox">
<%if @task.completed%>
  <label for="checkbox<%@task.id%>">You already completed this task</label>
<%else%>
  <label for="checkbox<%@task.id%>">task is not completed yet</label>
<%end%>

<%= link_to "Back to Tasks", tasks_path%>
