<h1 class="text-center"> TODO list! </h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between">
      <div class="task">
      <input <% if task.completed %> checked <% end %> id="checkbox<%task.id%>" type="checkbox" class="form-check-input">
      <label for="checkbox<%task.id%>"><%= link_to task.title, task_path(task), class:"text-decoration-none form-check-label" %> </label>
      </div>
      <%= link_to "", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you 100% sure?"}, class: "btn btn-close"%>
    </li>
  <% end %>
</ul>
<div class="btn-wrapper text-center">
<%= link_to "Add task", new_task_path, class: "btn btn-primary mt-3 text-center"%>
</div>
